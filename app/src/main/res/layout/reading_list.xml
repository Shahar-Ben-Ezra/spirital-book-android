<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txtTitle_reading_list"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="@string/title"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/txtOptionDigit_reading_list"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewBook_current_read"
            android:layout_width="55dp"
            android:layout_height="47dp"
            android:layout_below="@id/Written_by_current_read"
            android:layout_alignStart="@+id/txtTitle_current_read"
            android:layout_marginStart="1dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ic_launcher_foreground"/>


        <TextView
            android:id="@+id/stories_reading_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:text="@string/srories"
            android:textAppearance="?android:textAppearance" />
    </android.support.v7.widget.CardView>

</RelativeLayout>